<Page
    Height="450"
    Title="MyAccountPage"
    Width="800"
    mc:Ignorable="d"
    x:Class="MyApp.SHIS.View.Pages.MyAccountPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MyApp.SHIS.View.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <ScrollViewer Margin="10">
            <StackPanel Margin="10">
                <GroupBox Background="White">
                    <GroupBox.Header>
                        <TextBlock FontSize="16" Text="我的信息" />
                    </GroupBox.Header>
                    <StackPanel>
                        <WrapPanel Margin="10">
                            <TextBlock
                                FontSize="15"
                                Text="用户名"
                                VerticalAlignment="Center"
                                Width="50" />
                            <TextBox Name="UserNameTextBox" Width="100" />
                            <Button Content="确认修改" Margin="10,0" />

                        </WrapPanel>
                    </StackPanel>

                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
